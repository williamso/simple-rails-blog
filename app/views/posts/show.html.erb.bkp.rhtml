<% if notice.present? %>
	<meta HTTP-EQUIV="REFRESH" content="4; url=<%= posts_path %>">
	<p id="notice"><%= notice %></p>
<% end %>

<%= render partial: "header", locals: { search: false, titulo: "Nova Oportunidade"} %>

<%= render 'cover' %>

<section id="posts" class="posts">
	<div id="posts-inner" class="posts-inner">
		<br><br><br><br>
		<% render "post" %>
	</div>
</section>

<%= link_to 'Edit', edit_post_path(post) %> |
<%= link_to 'Back', posts_path %>
